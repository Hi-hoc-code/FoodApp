<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp"
    tools:context=".activity.ChangeInfoActivity">

    <ImageView
        android:id="@+id/btnBackInfo"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/back" />

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:src="@drawable/avatar"
        app:shapeAppearanceOverlay="@style/circle" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtChangeName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/border_log"
            android:hint="Nhập tên" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtChangePhone"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/border_log"
            android:hint="Số điện thoại" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnChangeInfo"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="Xác nhận"
        app:cornerRadius="8dp"
        android:backgroundTint="#ed7411"/>

</LinearLayout>